<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path, :html => { :class => 'form-signin' }) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => 'form-control', :placeholder => 'abc@example.com' %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'form-control', :placeholder => 'password' %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => 'btn btn-lg btn-success btn-block' %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path, :class => 'btn btn-lg btn-primary btn-block btn-signup' %></p>
