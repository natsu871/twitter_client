<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %></h1>

      <% unless @users.empty? %>
        <ul class="users list-group">
          <% @users.each do |user| %>
            <li class="list-group-item">
            <%= gravatar_for user, :size => 30 %>
            <%= link_to user.name, user %>
            <% if current_user.admin? %>
              | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?", :title => "Delete #{user.name}" %>
            <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </td>
    <td class="sidebar">
      <h4>Name</h4> <%= @user.name %><br>
      <h4>URL</h4> <%= link_to user_path(@user), @user %><br>
      <h4>Microposts</h4> <%= @user.microposts.count %>
      <%= render 'shared/stats' %>
      <% unless @users.empty? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, :size => 30), user %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>
