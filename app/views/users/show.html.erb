<h1><%= gravatar_for @user %><%= @user.name %></h1>
<%= render 'follow_form' if signed_in? %>

<% unless @user.microposts.empty? %>
  <table class="microposts" summary="User microposts">
    <%= render @microposts %>
  </table>
<% end %>

<div class="sidebar">
  <h4>Name</h4> <%= @user.name %><br>
  <h4>URL</h4> <%= link_to user_path(@user), @user %><br>
  <h4>Microposts</h4> <%= @user.microposts.count %>
  <%= render 'shared/stats' %>
</div>
