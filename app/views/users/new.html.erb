<h1>Sign up</h1>

<%= form_for(@user, :html => { :class => 'form-signin' }) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => 'form-control', :placeholder => 'Name' %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => 'form-control', :placeholder => 'abc@example.com' %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class => 'form-control', :placeholder => 'password' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'password' %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>
