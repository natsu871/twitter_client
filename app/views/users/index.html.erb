<h1>All users</h1>

<ul class="users list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
    <%= gravatar_for user, :size => 30 %>
    <%= link_to user.name, user %>
    <% if current_user.admin? %>
      | <%= link_to "delete", user, :method => :delete, :confirm => "You sure?", :title => "Delete #{user.name}" %>
    <% end %>
    </li>
  <% end %>
</ul>
